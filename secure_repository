rm -f /etc/docker/daemon.json
mkdir certs
openssl req -newkey rsa:4096 -nodes -sha256 -keyout certs/domain.key -x509 -days 365 -out certs/domain.crt (hostname = repo.docker.local)

cd /eyc/docker
mkdir certs.d/repo.docker.local:5000
cd
cp certs/domain.crt /etc/docker/certs.d/repo.docker.local:5000/ca.crt
docker run -p 5000:5000 -d --name secure_registry -v $(pwd)/certs:/certs -e REGISTRY_HTTP_TLS_CERTIFICATE=/certs/domain.crt -e REGISTRY_HTTP_TLS_KEY=/certs/domain.key registry

